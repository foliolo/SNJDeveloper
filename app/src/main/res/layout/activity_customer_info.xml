<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".admin.CustomerInfoActivity"
    android:layout_height="match_parent">

    <include
        layout="@layout/simple_header"
        android:id="@+id/simple_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/simple_header"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/red"
            app:cardElevation="10dp"
            android:visibility="gone"
            android:id="@+id/blockUserCard"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/arrow_right_gray"
                android:text="User is blocked. Click here to edit the user"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="300dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:elevation="18dp"
                    android:layout_marginTop="10dp"
                    android:background="#16000000"
                    android:layout_height="300dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"

                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/username_shop_name"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."

                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"

                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:autoLink="phone"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/Wallet"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"

                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/address"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:autoLink="map"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:id="@+id/sendEmail"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/email_address"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Rate"
                    android:id="@+id/rate_text"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Change"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:onClick="changeRateOnClick"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rate_change"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_below="@id/rate_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"

                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_below="@id/rate_text"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/rate_edit_layout"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/cancel"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="15dp"
                        android:padding="5dp"
                        android:background="@drawable/seekbar_shape"
                        android:onClick="cancelRateOnClick"
                        android:layout_height="25dp"/>
                    <EditText
                        android:id="@+id/rate_edit"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginTop="-2dp"
                        android:gravity="center"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="sans-serif"
                        android:hint="@string/enter_new_rate" />

                    <Button
                        android:layout_width="wrap_content"
                        android:text="Save"
                        android:onClick="saveRateOnClick"
                        android:layout_marginTop="-2dp"
                        android:layout_height="40dp" />
                    <ProgressBar
                        android:layout_width="20dp"
                        android:layout_marginStart="-50dp"
                        android:elevation="10dp"
                        android:id="@+id/rateProgress"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:indeterminateTint="#fff"
                        android:layout_height="30dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/rate"
                    android:background="#43141414"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Total Orders"
                    android:id="@+id/order_text"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Orders"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:onClick="seeOrderOnClick"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/order"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/total_order"
                    android:layout_below="@id/order_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/total_order"
                    android:background="#43141414"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Transactions and Earnings"
                    android:id="@+id/tr_text"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Transactions"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:onClick="seeTransOnClick"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/see_trans"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/total_transaction"
                    android:layout_below="@id/tr_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/total_transaction"
                    android:background="#43141414"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Total Bottles"
                    android:id="@+id/bottle_text"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Bottles"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:onClick="seeBottleOnClick"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/bottle"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/total_bottle"
                    android:layout_below="@id/bottle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/total_remaining"
                    android:layout_below="@id/bottle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/total_bottle"

                    android:fontFamily="sans-serif"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/total_bottle"
                    android:background="#43141414"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:id="@+id/newOrder"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="newOrderClick"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/new_order"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Add a new order for the customer"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:onClick="newTransactionOnClick"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:id="@+id/newTransaction"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/entry_transaction_title"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/entry_transaction_subtitle"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:id="@+id/newBottle"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="newBottleClick"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/entry_bottle"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/entry_bottle_subtitle"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:onClick="sendBillClicked"
                    android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                    android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                    android:id="@+id/sendBill"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:paddingBottom="8dp"
                        android:text="Bill alert"
                        android:textColor="@color/object_confirmed_bg_gradient_end"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Send bill to this customer"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/object_detected_bg_gradient_end"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#43141414" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                    android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                    android:id="@+id/sendNotification"
                    android:visibility="gone"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:paddingBottom="8dp"
                        android:text="Send Notification"
                        android:textColor="@color/object_confirmed_bg_gradient_end"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/send_notification_message_to_the_user"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/object_detected_bg_gradient_end"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#43141414" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                    android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                    android:id="@+id/sendPopup"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:paddingBottom="8dp"
                        android:text="Send popup message"
                        android:textColor="@color/object_confirmed_bg_gradient_end"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/show_a_message_when_user_open_the_app"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/object_detected_bg_gradient_end"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#43141414" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                    android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                    android:id="@+id/sendInfoBox"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:paddingBottom="8dp"
                        android:text="Show information box"
                        android:textColor="@color/object_confirmed_bg_gradient_end"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/create_a_information_box_for_a_user"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/object_detected_bg_gradient_end"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#43141414" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                    android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                    android:id="@+id/delUser"
                    android:visibility="gone"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="delUserClicked"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:paddingBottom="8dp"
                        android:text="@string/delete_user"
                        android:textColor="@color/red"
                        android:textSize="16sp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/delete_the_user_records_from_the_server"
                        android:fontFamily="sans-serif"
                        android:textColor="#D52727"
                        android:textSize="14sp" />

