<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                app:cardElevation="10dp"
                android:id="@+id/nameLayout"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_height="35dp">
                <ImageView
                    android:layout_width="35dp"
                    android:id="@+id/userimage"
                    android:scaleType="centerInside"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/username"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/nameLayout"
                 android:id="@+id/mobilenumber"
                android:paddingStart="1dp"
                android:paddingEnd="5dp"
                android:layout_toStartOf="@id/wallet"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Loading wallet"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:drawablePadding="10dp"
                android:layout_marginEnd="3dp"
                android:id="@+id/wallet"
                android:layout_toStartOf="@id/walletProgress"
                android:drawableStart="@drawable/wallet"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:layout_width="20dp"
                android:id="@+id/walletProgress"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-3dp"
                android:layout_height="30dp"/>
        </RelativeLayout>

</androidx.cardview.widget.CardView>