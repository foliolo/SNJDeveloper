<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:background="?attr/selectableItemBackground">
    <!--    70dp-->
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/color4"
        android:layout_centerVertical="true"
        android:id="@+id/cardview"
        android:layout_height="60dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/username" />

        <ImageView
            android:layout_width="60dp"
            android:id="@+id/userImage"
            android:contentDescription="@string/user_image"
            android:layout_height="60dp" />
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:layout_width="40dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/delProgress"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_height="40dp" />

    <ImageButton
        android:layout_width="30dp"
        android:tint="@color/red"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/delBt"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/userTitle"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toStartOf="@id/delBt"
        android:layout_marginEnd="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/cardview"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/userDesc"
        android:textSize="16sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toStartOf="@id/delBt"
        android:layout_marginEnd="5dp"
        android:textColor="@color/object_confirmed_bg_gradient_end"
        android:layout_marginTop="5dp"
        android:layout_below="@id/userTitle"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/cardview"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/extra"
        android:text="In Customers"
        android:ellipsize="end"
        android:gravity="end"
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/green_light"
        android:layout_marginTop="5dp"
        android:layout_below="@id/userTitle"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/userDesc"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/userDesc"
        android:layout_marginTop="10dp"
        android:layout_marginStart="77dp"
        android:background="@color/lightgray" />

</RelativeLayout>
