<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".settings.SettingsActivity"
    android:layout_height="match_parent">
    <include layout="@layout/simple_header"
        android:id="@+id/simple_header"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/simple_header"
        android:id="@+id/scroll_view"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/total_orders"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/total_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"

                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/total_transactions"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/total_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Loading..."
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"

                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/total_earnings"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/total_earnings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"

                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/total_bottles"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/total_bottle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Total Users"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/total_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/ratingfeedback"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Rating"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:id="@+id/ratingTitle"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:drawableEnd="@drawable/arrow_right_gray"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:shadowColor="#FFFFFF"
                    android:text="See Feedback"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:id="@+id/rating"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@drawable/ic_star_black_24dp"
                    android:fontFamily="sans-serif"
                    android:paddingEnd="7dp"
                    android:visibility="gone"
                    android:paddingStart="1dp"
                    android:layout_below="@id/ratingTitle"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:id="@+id/totalRating"
                    android:text="Loading..."

                    android:layout_toEndOf="@id/rating"
                    android:fontFamily="sans-serif"
                    android:layout_below="@id/ratingTitle"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/totalRating"
                    android:background="#43141414"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Database Size"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:id="@+id/database"
                   android:visibility="invisible"
                   android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/dbSize"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:minWidth="10dp"
                    android:layout_marginBottom="2dp"
                    android:paddingBottom="8dp"
                    android:layout_toEndOf="@id/dbSize"
                    android:layout_centerVertical="true"
                    android:id="@+id/dbProgress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_toStartOf="@id/dblimit"
                    android:layout_height="15dp"/>
                   <TextView

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingBottom="10dp"
                       android:layout_alignParentEnd="true"
                       android:fontFamily="sans-serif"

                       android:id="@+id/dblimit"
                       android:textColor="@color/object_detected_bg_gradient_end"
                       android:textSize="14sp"/>
               </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Storage Size"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/storage"
                    android:visibility="invisible"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:id="@+id/stSize"
                        android:paddingBottom="4dp"
                        android:textColor="@color/object_detected_bg_gradient_end"
                        android:textSize="14sp"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@id/stSize"
                        android:layout_centerVertical="true"
                        android:id="@+id/stProgress"
                        android:layout_toStartOf="@id/stlimit"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_height="15dp"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif"
                        android:id="@+id/stlimit"
                        android:textColor="@color/object_detected_bg_gradient_end"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:onClick="developerOnCick"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Contact Developer"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Contact the developer via mail"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Last Login"
                    android:textColor="@color/object_confirmed_bg_gradient_end"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/last_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Loading..."
                    android:fontFamily="sans-serif"
                    android:textColor="@color/object_detected_bg_gradient_end"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43141414"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:onClick="logoutclick"
                android:paddingStart="@dimen/home_page_mode_item_padding_horizontal"
                android:paddingEnd="@dimen/home_page_mode_item_padding_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="8dp"
                    android:text="Logout"
                    android:textColor="@color/red"
                    android:textSize="16sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#43141414"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>